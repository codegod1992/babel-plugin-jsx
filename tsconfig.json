{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": ["node", "jest"],
  },
  "include": [
    "global.d.ts",
    "packages/*/src",
    "packages/*/test",
  ]
}
